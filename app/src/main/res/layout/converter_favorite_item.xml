<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="18dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="From" android:layout_weight="1"/>
                <TextView android:textSize="18dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="To" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="18dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="To" android:layout_weight="1"/>
                <TextView android:textSize="18dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="To" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="18dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="To" android:layout_weight="1"/>
                <TextView android:textSize="18dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="To" android:layout_weight="1"/>
            </LinearLayout>
            <ImageView android:layout_gravity="center" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/favorite"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_marginBottom="7dp">
        <TextView android:textSize="16dp" android:textColor="#2f2f30" android:gravity="center" android:id="@+id/txtCFFromAmount" android:layout_width="0dp" android:layout_height="match_parent" android:text="From" android:layout_weight="0.9"/>
        <TextView android:textSize="16dp" android:textColor="#2f2f30" android:gravity="center" android:id="@+id/txtCFCode" android:layout_width="0dp" android:layout_height="match_parent" android:text="Convert" android:layout_weight="1.2"/>
        <TextView android:textSize="16dp" android:textColor="#2f2f30" android:gravity="center" android:id="@+id/txtCFToAmount" android:layout_width="0dp" android:layout_height="match_parent" android:text="To" android:layout_weight="1.1"/>
        <ImageView android:gravity="center" android:id="@+id/imgCFFavorite" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/ic_favorite" android:layout_weight="0.8"/>
    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider android:layout_width="match_parent" android:layout_height="1dp" app:dividerColor="#dedede"/>
</LinearLayout>
