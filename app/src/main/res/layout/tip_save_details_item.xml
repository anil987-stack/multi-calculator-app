<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="20dp" android:textColor="#2f2f30" android:id="@+id/txtTipTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="sz" android:fontFamily="@font/poppins_medium"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/background_basic_cal_gray" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_weight="0.7">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_weight="1">
                <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="14dp" android:textColor="#2f2f30" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Bill Amount" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
                    <TextView android:textSize="14dp" android:textColor="#01ac3b" android:id="@+id/txtTipIBillAmount" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="100000.0" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
                    <TextView android:textSize="14dp" android:textColor="#2f2f30" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Tax Rate" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
                    <TextView android:textSize="14dp" android:textColor="#01ac3b" android:id="@+id/txtTipITaxRate" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="158581.2" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="30dp" android:layout_weight="1">
                <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="14dp" android:textColor="#2f2f30" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Tip Rate" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
                    <TextView android:textSize="14dp" android:textColor="#01ac3b" android:id="@+id/txtTipITipRate" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="100000.0" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
                    <TextView android:textSize="14dp" android:textColor="#2f2f30" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Split" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
                    <TextView android:textSize="14dp" android:textColor="#01ac3b" android:id="@+id/txtTipISplit" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="158581.2" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" app:dividerColor="#dedede"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_weight="0.3">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="4">
                <TextView android:textSize="14dp" android:textColor="#2f2f30" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Tip Amount" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
                <TextView android:textSize="14dp" android:textColor="#01ac3b" android:id="@+id/txtTipOTotalTipAmount" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="100000.0" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="4">
                <TextView android:textSize="14dp" android:textColor="#2f2f30" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Pay Amount" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
                <TextView android:textSize="14dp" android:textColor="#01ac3b" android:id="@+id/txtTipOTotalPayAmount" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="120" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2.7">
                <TextView android:textSize="14dp" android:textColor="#2f2f30" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Each Pay" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
                <TextView android:textSize="14dp" android:textColor="#01ac3b" android:id="@+id/txtTipOEachPay" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="10%" android:layout_weight="1" android:fontFamily="@font/poppins_medium"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView android:orientation="vertical" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="7dp" app:cardElevation="7dp" app:cardUseCompatPadding="true">
            <LinearLayout android:orientation="vertical" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="20dp" android:textStyle="bold" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="sz"/>
                <com.google.android.material.divider.MaterialDivider android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="17dp" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Loan Amount = 10000" android:layout_weight="1"/>
                        <TextView android:textSize="17dp" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Rate = 10%" android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="17dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Month = 120" android:layout_weight="1"/>
                        <TextView android:textSize="17dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="17dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Principal Amount = 10000" android:layout_weight="1"/>
                        <TextView android:textSize="17dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Interest = 455" android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="17dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Total Payment" android:layout_weight="1"/>
                        <TextView android:textSize="17dp" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Monthly EMI = 10000" android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
